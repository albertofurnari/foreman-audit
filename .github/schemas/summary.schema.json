{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Gate SUMMARY.yaml schema",
  "type": "object",
  "required": ["gate", "scope", "context", "assertions", "evidence", "decision_request"],
  "properties": {
    "gate": { "type": "string", "pattern": "^P[0-9]+" },
    "scope": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "string" }
    },
    "context": {
      "type": "object",
      "required": ["console_fqdn", "console_ip"],
      "properties": {
        "console_fqdn": { "type": "string", "minLength": 3 },
        "console_ip": {
          "type": "string",
          "oneOf": [
            { "format": "ipv4" },
            { "format": "ipv6" }
          ]
        },
        "proxies_examined": {
          "type": "array",
          "items": { "type": "string", "minLength": 3 },
          "default": []
        }
      },
      "additionalProperties": true
    },
    "assertions": {
      "type": "object",
      "required": [
        "dns_forward_reverse_consistent",
        "pki_common_issuer",
        "pki_expiry_days_min",
        "connectivity_ok"
      ],
      "properties": {
        "dns_forward_reverse_consistent": { "type": "boolean" },
        "pki_common_issuer": { "type": "string" },
        "pki_expiry_days_min": { "type": "integer", "minimum": 0 },
        "connectivity_ok": { "type": "boolean" }
      },
      "additionalProperties": true
    },
    "evidence": {
      "type": "object",
      "required": [
        "dns_console",
        "dns_proxies",
        "pki_console",
        "pki_proxies",
        "reachability"
      ],
      "properties": {
        "dns_console": { "type": "string" },
        "dns_proxies": { "type": "string" },
        "pki_console": { "type": "string" },
        "pki_proxies": { "type": "string" },
        "reachability": { "type": "string" },
        "proxies_list": { "type": "string" },
        "git_versions": { "type": "string" }
      },
      "additionalProperties": false
    },
    "risks_open": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "desc"],
        "properties": {
          "id": { "type": "string" },
          "title": { "type": "string" },
          "desc": { "type": "string" },
          "cause": { "type": "string" },
          "impact": { "type": "string" },
          "likelihood": { "type": "string", "enum": ["Low", "Medium", "High"] },
          "severity": { "type": "string", "enum": ["Low", "Medium", "High", "Critical"] },
          "mitigation": { "type": "string" },
          "owner": { "type": "string" },
          "status": { "type": "string", "enum": ["Open", "Mitigated", "Closed", "Accepted"] },
          "evidence": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "additionalProperties": true
      },
      "default": []
    },
    "decision_request": {
      "type": "object",
      "required": ["status", "actions_proposed"],
      "properties": {
        "status": { "type": "string", "enum": ["REVIEW", "APPROVED", "CHANGES_REQUESTED"] },
        "actions_proposed": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "desc"],
            "properties": {
              "id": { "type": "string" },
              "desc": { "type": "string" },
              "commands_ref": { "type": "string" }
            },
            "additionalProperties": true
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}

